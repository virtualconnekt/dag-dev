{
  "name": "dagdev",
  "version": "1.0.5",
  "description": "CLI tool for DagDev - Hardhat for BlockDAG Networks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "dagdev": "./dist/index.js"
  },
  "scripts": {
    "build": "npm run clean && esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --external:mocha --external:chai --external:@types/mocha --external:@types/chai --external:solc --external:@dagdev/runtime --external:@dagdev/core --format=cjs --banner:js=\"#!/usr/bin/env node\"",
    "build:types": "tsc --emitDeclarationOnly",
    "build:exe": "npm run build && pkg dist/index.js --targets node18-linux-x64,node18-macos-x64,node18-win-x64 --output dist/executables/dagdev --compress GZip",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist"
  },
  "pkg": {
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "dist/executables",
    "assets": [
      "node_modules/solc/**/*"
    ]
  },
  "keywords": [
    "dag",
    "blockdag",
    "cli",
    "hardhat",
    "ethereum",
    "evm",
    "smart-contracts",
    "blockchain",
    "development-tools"
  ],
  "author": "DagDev Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/virtualconnekt/dag-dev.git",
    "directory": "cli"
  },
  "bugs": {
    "url": "https://github.com/virtualconnekt/dag-dev/issues"
  },
  "homepage": "https://github.com/virtualconnekt/dag-dev#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@dagdev/compiler": "^1.0.0",
    "@dagdev/config": "^1.0.0",
    "@dagdev/core": "^1.0.1",
    "@dagdev/runtime": "^1.0.1",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "dotenv": "^16.0.0",
    "ora": "^5.4.1",
    "solc": "^0.8.30"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.0.0"
  }
}
